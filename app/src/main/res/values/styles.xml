<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <!-- Second app them -->
    <style name="AppThemeSecond" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/second_primary</item>
        <item name="colorPrimaryDark">@color/second_primary_dark</item>
    </style>

    <!-- Third app them -->
    <style name="AppThemeThird" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/third_primary</item>
        <item name="colorPrimaryDark">@color/third_primary_dark</item>
    </style>

    <style name="input_button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_background_button</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:minHeight">55dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="font_style_standard">
        <item name="android:textSize">@dimen/font_size_standard</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="font_style_footer">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="cell_right_option">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
        <item name="android:tint">@color/divider</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:minWidth">55dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="cell_list_view_basic">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/selector_background_colors</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="detail_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="section_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/header_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/horizontal_line</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
