<?xml version="1.0" encoding="utf-8"?><!--  https://material.google.com/components/lists.html# -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_background_colors"
        android:clickable="true"
        android:minHeight="48dp"
        android:paddingLeft="16dp">

        <!--@@ テキストの高さのずれ 後回し-->

        <ImageView
            android:id="@+id/menu_right"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="@color/divider" />

        <!-- layout_toStartOf:指定のViewの左側にViewを配置する -->
        <!-- start = left. end = right. RTL対応のためのもの -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/menu_right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/font_style_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                tools:text="test" />

            <TextView
                android:id="@+id/details"
                style="@style/detail_text_style"
                android:paddingBottom="8dp"
                tools:text="detail" />
        </LinearLayout>
    </RelativeLayout>
</layout>
