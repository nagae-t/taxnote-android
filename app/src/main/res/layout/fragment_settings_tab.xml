<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/header_background"
        android:orientation="vertical"
        tools:context="com.example.taxnoteandroid.SettingsTabFragment">

        <TextView
            style="@style/font_style_standard"
            android:background="@drawable/selector_background_colors"
            android:id="@+id/upgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/cell_height_standard"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/benefits_of_upgrade" />

        <!-- 複数帳簿 -->
        <LinearLayout
            android:id="@+id/project_radio_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="20dp"
            android:paddingStart="6dp"
            android:paddingEnd="2dp">
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/main_project_radio"
                style="@style/font_style_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_background_colors"
                android:checked="true"
                android:gravity="center_vertical"
                android:minHeight="44dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/secondary_text"
                android:text="@string/master_project_name" />
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/header_background"/>
            <LinearLayout
                android:id="@+id/sub_project_radio_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <TextView
            style="@style/font_style_standard"
            android:id="@+id/settings_project_button"
            android:background="@drawable/selector_background_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/cell_height_standard"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:clickable="true"
            android:text="@string/project_settings" />

        <Switch
            style="@style/font_style_standard"
            android:background="@drawable/selector_background_colors"
            android:id="@+id/decimal_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/cell_height_standard"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@color/secondary_text"
            android:text="@string/decimal_button" />

        <TextView
            style="@style/font_style_standard"
            android:id="@+id/send_message_button"
            android:background="@drawable/selector_background_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/cell_height_standard"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/ask_questions_or_request" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            style="@style/font_style_standard"
            android:background="@drawable/selector_background_colors"
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/cell_height_standard"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/frequently_asked_questions" />

        <TextView
            style="@style/font_style_standard"
            android:id="@+id/share_taxnote_button"
            android:background="@drawable/selector_background_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/cell_height_standard"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/share_taxnote" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            style="@style/font_style_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:gravity="center"
            android:minHeight="@dimen/cell_height_standard"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                style="@style/font_style_standard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/version" />

            <TextView
                style="@style/font_style_standard"
                android:textColor="@color/text_gray"
                android:id="@+id/version"
                tools:text="1.4.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</layout>