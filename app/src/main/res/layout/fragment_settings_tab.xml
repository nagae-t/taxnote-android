<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/header_background"
        android:orientation="vertical"
        tools:context="com.example.taxnoteandroid.SettingsTabFragment">

        <TextView
            style="@style/font_style_standard"
            android:background="@drawable/selector_background_colors"
            android:id="@+id/upgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:minHeight="55dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/benefits_of_upgrade" />

        <TextView
            style="@style/font_style_standard"
            android:id="@+id/send_message_button"
            android:background="@drawable/selector_background_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:minHeight="55dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/ask_questions_or_request" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            style="@style/font_style_standard"
            android:background="@drawable/selector_background_colors"
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="55dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/frequently_asked_questions" />

        <LinearLayout
            style="@style/font_style_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#ffffffff"
            android:gravity="center"
            android:minHeight="55dp"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                style="@style/font_style_standard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/version" />

            <TextView
                style="@style/font_style_standard"
                android:textColor="@color/text_gray"
                android:id="@+id/version"
                tools:text="1.4.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</layout>