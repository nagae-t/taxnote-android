<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:background="@color/header_background"
        android:fadingEdge="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                style="@style/font_style_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_background_colors"
                android:clickable="true"
                android:gravity="center"
                android:minHeight="48dp"
                android:orientation="vertical"
                android:text="@string/send_export"
                android:textColor="@color/primary" />

            <LinearLayout
                android:id="@+id/char_code_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_background_colors"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:minHeight="@dimen/cell_height_standard"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    style="@style/font_style_standard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondary_text"
                    android:text="@string/character_code" />

                <TextView
                    android:id="@+id/char_code_value"
                    style="@style/font_style_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>
            <TextView
                style="@style/font_style_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="@string/character_code_desc"/>

            <TextView
                style="@style/font_style_standard"
                android:background="@drawable/selector_background_colors"
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:minHeight="@dimen/cell_height_standard"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="@string/frequently_asked_questions" />
        </LinearLayout>
    </ScrollView>
</layout>