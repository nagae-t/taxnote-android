<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taxnoteandroid">

    <!-- App Billing -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".TaxNoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".entryTab.SummaryActivity" />
        <activity android:name=".entryTab.InputDataActivity" />
        <activity android:name=".AccountSelectActivity" />
        <activity android:name=".EntryEditActivity" />
        <activity android:name=".PriceEditActivity" />
        <activity android:name=".AccountEditActivity" />
        <activity
            android:name=".UpgradeActivity"
            android:label="@string/benefits_of_upgrade" />
        <activity
            android:name=".DataExportActivity"
            android:label="@string/data_export" />
        <activity
            android:name=".DataExportRangeActivity"
            android:label="@string/data_export_range" />
    </application>

</manifest>